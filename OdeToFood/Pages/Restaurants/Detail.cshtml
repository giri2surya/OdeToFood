@page "{restaurantId:int}"



@model OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

@if (Model.Message != null)
{
    <div class="alert alert-success">@Model.Message</div>
}

<h2>@Model.Restaurant.Name</h2>
<div> ID: @Model.Restaurant.Id</div>
<div> Location: @Model.Restaurant.Location</div>
<div> Cusion: @Model.Restaurant.Cuisine</div>



<a asp-page="./List" class="btn btn-dark">All Restaurant</a>


